<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cornez.muhammadharis.social_app.Sign_up"
    android:background="@drawable/background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Social Media App"
            android:background="@drawable/button"
            android:textSize="40dp"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Registration Details"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/button"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:textSize="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"/>
        <EditText
            android:id="@+id/SignUp_Email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/email"
            android:hint=" Email"
            android:inputType="textEmailAddress"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/SignUp_Password_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/password"
            android:hint=" Password"
            android:inputType="textPassword"
            android:padding="5dp"/>

        <EditText
            android:id="@+id/SignUp_Cpassword_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/input"
            android:drawableLeft="@drawable/password"
            android:hint=" Confirm Password"
            android:inputType="textPassword"
            android:padding="5dp"/>

        <Button
            android:id="@+id/SignUP_BTN"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button"
            android:padding="20dp"
            android:text="Create Account"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_pressed"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="SIGNUP_BUTTON_CLICK"/>
    </LinearLayout>
</RelativeLayout>